<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yww.nexus.mapper.UserMapper">

    <select id="getRoleCodeById" resultType="com.yww.nexus.entity.Role">
        SELECT
            r.id,
            r.code
        FROM
            user_role AS ur
                LEFT JOIN role r ON r.id = ur.role_id
        WHERE
            ur.id = #{userId}
    </select>

</mapper>
