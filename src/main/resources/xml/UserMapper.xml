<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yww.nexus.mapper.UserMapper">

    <select id="getRoleIdByUserId" resultType="java.lang.String">
        SELECT role_id FROM user_role WHERE user_id = #{userId}
    </select>

    <select id="getUserIdByUserName" resultType="com.yww.nexus.entity.User">
        SELECT id, username FROM user WHERE username = #{username}
    </select>

</mapper>
